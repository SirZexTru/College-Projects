{% extends "site/layout/layout.twig" %}
{% block title %} | Nova senha {% endblock %}
{% block content %}
    <div class="row">
        <div class="block-reset-password">
            <div class="col-md-offset-3 col-md-6 text-center" style="padding-bottom: 40px;">
                <h3>REDEFINIÇÃO DE SENHA</h3>
            </div>
            <div class="col-md-offset-4 col-md-4">
                {% if message is defined %}
                    <div class="text-center">
                        <div class="alert alert-success alert-dismissible" role="alert">
                            {{ message }}
                        </div>
                        <a href="/user/login" class="btn btn-cdl ladda-button">Voltar</a>
                    </div>
                {% else  %}
                    <form action="/user/new-password" method="post" class="form-validate form-with-label" id="updatePassword">
                        <input type="hidden" name="token" value="{{ token }}">

                        <div class="form-group">
                            <label class="display-block">Nova senha*<span class="top-hint pull-right">Campos obrigatórios *</span></label>
                            <input type="password" class="form-control"  minlength="8" maxlength="12" name="newPassword" id="newPassword" required>
                        </div>
                        <div class="form-group">
                            <label>Confirme a nova senha*</label>
                            <input type="password" class="form-control" name="confirmPassword" equalto="#newPassword" required>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success btn-block ladda-button">Enviar</button>
                        </div>
                    </form>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
